# Molokai color scheme for fish shell
# Matches the Molokai theme in ghostty for consistent terminal experience

set -Ux fish_color_command 66D9EF           # Cyan - commands
set -Ux fish_color_param F8F8F2             # White - parameters
set -Ux fish_color_option 66D9EF --italics # Cyan italics - options
set -Ux fish_color_operator E6DB74          # Yellow - operators
set -Ux fish_color_error F92672             # Red - errors
set -Ux fish_color_quote A6E22E             # Green - strings
set -Ux fish_color_comment 7E8E91           # Gray - comments
set -Ux fish_color_redirection AE81FF       # Magenta - redirections
set -Ux fish_color_autosuggestion 465457    # Dim gray - autosuggestions
set -Ux fish_color_end FD971F               # Orange - end of commands
set -Ux fish_color_escape AE81FF --bold     # Magenta bold - escape sequences
